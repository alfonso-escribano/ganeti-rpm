+++ ganeti-2.16.1/daemons/daemon-util.in	2019-04-17 13:55:47.574431971 +0900
@@ -286,8 +286,27 @@
   local daemonexec=$(_daemon_executable $name)
 
   if use_systemctl; then
+    local option_file="/var/lib/ganeti/${name}.options"
+    local option_file_backup=$(mktemp "${option_file}.XXXXX")
+    if [[ -f "${option_file}" ]]; then
+      mv -f "${option_file}" "${option_file_backup}"
+      . "${option_file_backup}"
+      echo "OPTIONS=${OPTIONS} $@" > "${option_file}"
+    else
+      rm -f "${option_file_backup}"
+      echo "OPTIONS=$@" > "${option_file}"
+    fi
+
     systemctl start "${name}.service"
-    return $?
+    ret=$?
+
+    if [[ -f "${option_file_backup}" ]]; then
+      mv -f "${option_file_backup}" "${option_file}"
+    else
+      rm -f "${option_file}"
+    fi
+
+    return $ret
   fi
 
   # Read $<daemon>_ARGS and $EXTRA_<daemon>_ARGS
